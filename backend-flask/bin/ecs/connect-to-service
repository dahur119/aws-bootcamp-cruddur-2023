#!/usr/bin/bash

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="ecs-execute-command"
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"

if [ -z "$1" ]; then
  echo "No TASK_ID argument supplied. Example: ./connect-to-ecs-task.sh c3f5976fe96041b3ae6b6271e5e595f0 backend-flask"
  exit 1
fi
TASK_ID=$1

if [ -z "$2" ]; then
  echo "No CONTAINER_NAME argument supplied. Example: ./connect-to-ecs-task.sh c3f5976fe96041b3ae6b6271e5e595f0 backend-flask"
  exit 1
fi
CONTAINER_NAME=$2

aws ecs execute-command \
  --region us-west-2 \
  --cluster cruddur \
  --task $TASK_ID \
  --container $CONTAINER_NAME \
  --command "/bin/bash" \
  --interactive
